<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Define the character set and viewport for the document -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Set the title of the page using server-side data -->
    <title><%= title %></title>
    
    <!-- Include an external CSS stylesheet for layout -->
    <link rel="stylesheet" href="/css/layout.css">
    
    <!-- Include Noty CSS and JavaScript libraries for notifications and jQuery -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>

    <!-- Include Bootstrap CSS library from a CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
    
    <!-- Include additional styles using server-side data -->
    <%- style %>
</head>
<body>
    <!-- Check if a user is authenticated -->
    <%if(locals.user){%>
        <!-- Include the header partial if the user is authenticated -->
        <%- include('_header') %>
    <%}%>

    <!-- Include the main content of the page using server-side data -->
    <%- body %>
    
    <!-- JavaScript code section -->
    <script>
        // Select all list items within the header and remove their bottom borders
        const li = document.querySelectorAll("header ul li");
        li.forEach((el) => {el.style.borderBottom = "none";});

        // Display success and error notifications using Noty.js based on server-side flash messages
        <% if(flash.success && flash.success.length > 0) { %>
            new Noty({
                theme: 'metroui',
                text: "<%= flash.success %>",
                type: 'success',
                layout: 'topRight',
                timeout: 1000
            }).show();
        <% } %>

        <% if(flash.error && flash.error.length > 0) { %>
            new Noty({
                theme: 'metroui',
                text: "<%= flash.error %>",
                type: 'error',
                layout: 'topRight',
                timeout: 1000
            }).show();
        <% } %>
    </script>
    
    <!-- Include additional JavaScript code using server-side data -->
    <%- script %>

    <!-- Include the Font Awesome library -->
    <script src="https://kit.fontawesome.com/1dd0c8a742.js" crossorigin="anonymous"></script>

    <!-- Include Bootstrap JavaScript library from a CDN -->
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"
    ></script>
</body>
</html>
